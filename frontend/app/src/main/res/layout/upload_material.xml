<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark_svg">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Toolbar: Simulating an HTML Navbar -->
            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">
                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/black"
                    android:src="@drawable/ic_goback"
                    app:tint="@color/blue_focus" />


                <TextView
                    android:id="@+id/course_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upload Materials"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_focus"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Course Code Label -->
<!--            <TextView-->
<!--                android:id="@+id/course_code"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Course Code"-->
<!--                android:textSize="16sp"-->
<!--                android:textColor="?attr/courseCode"-->
<!--                android:layout_marginTop="8dp"/>-->

            <!-- Upload Area (HTML Drag & Drop zone equivalent) -->
            <LinearLayout
                android:id="@+id/uploadArea"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/upload_area_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp"
                android:translationZ="2dp">

                <!-- PDF Icon with circular background -->
                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circular_icon_background"/>

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pdf"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload PDF Document"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to browse or drag files here"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="8dp"/>

                <!-- File format indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/format_indicator_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_pdf"
                        android:layout_marginEnd="6dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF files only"
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Required drawable resources -->

            <!-- upload_area_background.xml -->
            <!--
            <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <solid android:color="?attr/colorSurfaceVariant"/>
                <corners android:radius="16dp"/>
                <stroke
                    android:width="2dp"
                    android:color="?attr/colorOutline"
                    android:dashWidth="8dp"
                    android:dashGap="4dp"/>
            </shape>
            -->

            <!-- circular_icon_background.xml -->
            <!--
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="oval">
                <solid android:color="?attr/colorPrimaryContainer"/>
                <size android:width="72dp" android:height="72dp"/>
            </shape>
            -->

            <!-- format_indicator_background.xml -->
            <!--
            <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <solid android:color="?attr/colorPrimaryContainer"/>
                <corners android:radius="20dp"/>
            </shape>
            -->

            <!-- Dropdown Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Resource Type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/app_name_color"
                android:layout_marginBottom="8dp"/>

            <!-- Dropdown Simulation (HTML select element) -->
            <TextView
                android:id="@+id/tvSelectType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select type"
                android:textSize="16sp"
                android:textColor="?attr/app_name_color"
                android:padding="12dp"
                android:background="?attr/pendingSubject"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="24dp"/>


            <!-- Selected File Label -->
            <!-- Selected File Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Files"
                android:textSize="20sp"
                android:textColor="?attr/app_name_color"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:id="@+id/selectedFilesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>
            <!-- Add this to your upload_material.xml layout, preferably afte the selectedFilesContainer -->
            <LinearLayout
                android:id="@+id/progressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/round_bg"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/uploadStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Uploading files..."
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
                <ProgressBar
                    android:id="@+id/uploadProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Please wait, do not close the app"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

            </LinearLayout>


            <!-- Submit Button (HTML <button>) -->
            <Button
                android:id="@+id/btnSubmitResources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Resources"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/buttonBlue"
                android:padding="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>

            <!-- Resource Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resources"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/blue_focus"
                android:layout_marginBottom="12dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/pdfContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </ScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
