<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_google_button">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/facultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/facultyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: SSE001"
            android:textSize="14sp"
            android:textColor="#666" />
    </LinearLayout>

    <TextView
        android:id="@+id/deleteButton"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:textColor="#FF0000"
        android:padding="8dp"
        android:backgroundTint="@color/blue_focus"
        android:background="@drawable/ic_delete_new"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
