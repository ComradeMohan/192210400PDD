<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF1E3A8A"
            android:endColor="#FF4A90E2"
            android:angle="135" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:left="10dp" android:top="5dp">
        <shape android:shape="oval">
            <solid android:color="#30FFFFFF" />
            <size
                android:width="25dp"
                android:height="25dp" />
        </shape>
    </item>
    <item android:right="15dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#20FFFFFF" />
            <size
                android:width="15dp"
                android:height="15dp" />
        </shape>
    </item>
    <item android:left="40dp" android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
</layer-list>