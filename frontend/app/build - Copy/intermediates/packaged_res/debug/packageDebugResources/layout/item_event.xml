<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:elevation="4dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_curve_box">

        <!-- Main content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Left side: Event info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <!-- Event title and type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewEventTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Event Title"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_focus"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>

                <!-- Dates row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/textViewEventStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:textColor="?attr/app_name_color"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â†’ "
                        android:textColor="?attr/app_name_color"
                        android:textSize="12sp"
                        android:layout_marginHorizontal="4dp"/>

                    <TextView
                        android:id="@+id/textViewEventEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="?attr/app_name_color"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/textViewEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Description"
                    android:textSize="14sp"
                    android:textColor="?attr/app_name_color"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Right side: Buttons aligned properly -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top|center_horizontal">

                <TextView
                    android:id="@+id/textViewEventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event "
                    android:textSize="16dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/blue_focus"
                    android:background="@drawable/rounded_bg"
                    android:paddingHorizontal="2dp"
                    android:layout_marginBottom="10dp"
                    android:paddingVertical="2dp"
                    android:textStyle="bold"/>

                <!-- Buttons container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:elevation="1dp"
                        android:minWidth="80dp"
                        android:minHeight="36dp"
                        android:paddingHorizontal="14dp"
                        android:text="Notify"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/blue_focus"
                        app:cornerRadius="18dp"
                        app:iconSize="14dp"
                        app:iconTint="@android:color/white"
                        app:rippleColor="@android:color/white"
                        tools:ignore="TouchTargetSizeCheck" />

                    <FrameLayout
                        android:id="@+id/deleteFrame"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:visibility="gone"
                        android:focusable="true"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/buttonDelete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_delete"
                            app:tint="@android:color/black"
                            android:scaleType="centerInside"
                            android:padding="0dp"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>