<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/admin_add_dept_box"
    android:padding="12dp"
    android:layout_marginBottom="10dp">

    <!-- Title + Delete Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvNoticeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notice Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/btnDeleteNotice"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="@android:color/holo_red_dark" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoticeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Notice details go here..."
        android:textSize="14sp"
        android:textColor="?attr/app_name_color" />

    <TextView
        android:id="@+id/tvNoticeDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="ðŸ“… 2025-08-14"
        android:textSize="12sp"
        android:textColor="?attr/app_name_color" />
</LinearLayout>
