<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark_svg">

    <!-- 🌀 Swipe-to-Refresh Wrapper -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 🔁 ScrollView Inside Refresh Layout -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 📅 Custom Calendar Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="?attr/pendingSubject">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Calendar Header with Navigation -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <ImageButton
                                android:id="@+id/prevMonthButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_arrow_left"
                                android:contentDescription="Previous Month"
                                android:tint="#C51A1A" />

                            <TextView
                                android:id="@+id/monthYearText"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="January 2025"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="?attr/app_name_color"
                                android:gravity="center" />

                            <ImageButton
                                android:id="@+id/nextMonthButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_arrow_right"
                                android:contentDescription="Next Month"
                                android:tint="#C51A1A" />
                        </LinearLayout>

                        <!-- Weekday Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Mon"
                                android:textSize="14sp"
                                android:textColor="#888888"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Tue"
                                android:textSize="14sp"
                                android:textColor="#888888"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Wed"
                                android:textSize="14sp"
                                android:textColor="#888888"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Thu"
                                android:textSize="14sp"
                                android:textColor="#888888"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Fri"
                                android:textSize="14sp"
                                android:textColor="#888888"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Sat"
                                android:textSize="14sp"
                                android:textColor="#888888"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Sun"
                                android:textSize="14sp"
                                android:textColor="#888888"
                                android:gravity="center" />
                        </LinearLayout>

                        <!-- Calendar Grid -->
                        <GridLayout
                            android:id="@+id/calendarGrid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:rowCount="6"
                            android:columnCount="7"
                            android:padding="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 🔖 Events Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?attr/app_name_color"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.02" />

                <!-- 📋 RecyclerView for Events -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:scrollbars="vertical"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp" />

                <!-- 🚫 Empty Events Message -->
                <TextView
                    android:id="@+id/textEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No events for this date."
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>