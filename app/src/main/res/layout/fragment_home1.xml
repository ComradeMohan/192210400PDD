<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient_dark_svg"
    android:orientation="vertical">

    <!-- Top Section (Header + Search + Notice) -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Greeting Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning,"
                android:textSize="22sp"
                android:textColor="?attr/app_name_color"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohan Reddy"
                android:paddingLeft="20dp"
                android:layout_below="@id/tvGreeting"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="?attr/app_name_color"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:layout_centerVertical="true"
                android:contentDescription="Notification Icon"
                android:src="@drawable/ic_notifications" />

        </RelativeLayout>
    </LinearLayout>
        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">
        <!-- Announcement Card -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/search_background"
            android:drawableStart="@drawable/ic_search"
            android:hint="  search pending courses ..."
            android:textColor="?attr/app_name_color"
            android:imeOptions="actionSearch"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <LinearLayout
            android:id="@+id/notification_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/announcement_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvNoticeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice Title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvNoticeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice description will appear here."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/degreeProgressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Degree Progress"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_focus" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <ProgressBar
                        android:id="@+id/degreeProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar_rounded" />

                    <TextView
                        android:id="@+id/degreeProgressPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="0%"
                        android:textSize="16sp"
                        android:textColor="@color/blue_focus"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:id="@+id/cgpaValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CGPA : 0"
                        android:textColor="?attr/app_name_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/predictedCgpaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:textColor="?attr/app_name_color"
                        android:text="Predicted CGPA : 0"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Continue Studying Section -->
            <LinearLayout
                android:id="@+id/continueStudyingSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue Studying"
                    android:textColor="?attr/app_name_color"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:id="@+id/continueStudyingCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_book"
                            app:tint="@color/blue_focus"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvContinueCourseName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Course Name"
                                android:textColor="?attr/app_name_color"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvContinueProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Progress: 0/0"
                                android:textColor="@color/blue_focus"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/blue_focus" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Pending Courses"
            android:textColor="?attr/app_name_color"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <!-- RecyclerView (Full Height, Scrolls independently) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPendingSubjects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:padding="8dp"
        android:clipToPadding="false" />
</LinearLayout>
