<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/adminBottomNav"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Departments Section -->
    <TextView
        android:id="@+id/tvDeptTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departments"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDepartments"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAddDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Department"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="?attr/adminBottomNav"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Courses Section -->
    <TextView
        android:id="@+id/tvCoursesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCourses"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnAddCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Course"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/blue_focus"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>
