<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_card_background"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:elevation="4dp">

        <!-- Course Name -->
        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <!-- Topic Name -->
        <TextView
            android:id="@+id/topicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"/>

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress: "
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginEnd="8dp"/>

            <ProgressBar
                android:id="@+id/topicProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:progress="0"
                android:max="100"
                android:progressTint="@android:color/holo_green_dark"
                android:backgroundTint="@android:color/darker_gray"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Content Section -->
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="20dp">

            <!-- Loading Spinner -->
            <LinearLayout
                android:id="@+id/loadingSpinnerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="visible">

                <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="@android:color/holo_blue_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading content..."
                    android:textSize="15sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="16dp"
                    android:textStyle="italic"/>

            </LinearLayout>

            <!-- Topic Content (WebView to support HTML + CSS) -->
            <WebView
                android:id="@+id/topicWebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:overScrollMode="never"
                android:scrollbarStyle="insideInset" />

            <!-- Mark as Read Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:background="@drawable/rounded_card_background"
                android:layout_margin="8dp">

                <CheckBox
                    android:id="@+id/markAsReadCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark as Read"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/readStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not read yet"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="italic"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navigation Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center">

        <!-- Previous Button -->
        <Button
            android:id="@+id/previousButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/previous_button_background"
            android:textColor="@android:color/white"
            android:layout_marginEnd="4dp"
            android:drawableStart="@android:drawable/ic_media_previous"
            android:drawablePadding="8dp"
            android:enabled="false"/>

        <!-- Next Button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/next_button_background"
            android:textColor="@android:color/white"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:drawableEnd="@android:drawable/ic_media_next"
            android:drawablePadding="8dp"/>

        <!-- Complete Topic Button -->
        <Button
            android:id="@+id/completeTopicButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Complete"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/complete_button_background"
            android:textColor="@android:color/white"
            android:layout_marginStart="4dp"
            android:drawableStart="@android:drawable/ic_menu_send"
            android:drawablePadding="8dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
