<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_card_background"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Question Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Question 1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Removed result icon - no symbols needed -->
    </LinearLayout>

    <!-- Question Text -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="4dp"
        android:text="What is the primary purpose of fundamental analysis in stock market evaluation?"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <!-- Options Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Option A -->
        <LinearLayout
            android:id="@+id/optionAContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/option_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/option_letter_background"
                android:gravity="center"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/optionAText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="To predict short-term price movements using technical indicators"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Removed indicator icon - no symbols needed -->
        </LinearLayout>

        <!-- Option B -->
        <LinearLayout
            android:id="@+id/optionBContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/option_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/option_letter_background"
                android:gravity="center"
                android:text="B"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/optionBText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="To evaluate a company's intrinsic value based on financial statements"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Removed indicator icon - no symbols needed -->
        </LinearLayout>

        <!-- Option C -->
        <LinearLayout
            android:id="@+id/optionCContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/option_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/option_letter_background"
                android:gravity="center"
                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/optionCText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="To analyze market sentiment and investor behavior patterns"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Removed indicator icon - no symbols needed -->
        </LinearLayout>

        <!-- Option D -->
        <LinearLayout
            android:id="@+id/optionDContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/option_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/option_letter_background"
                android:gravity="center"
                android:text="D"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/optionDText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="To track daily trading volumes and price fluctuations"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Removed indicator icon - no symbols needed -->
        </LinearLayout>
    </LinearLayout>

        <!-- Answer Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_bg_light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/answerSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Answer: B | Correct Answer: B"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
</LinearLayout>
